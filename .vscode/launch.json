    "version": "0.2.0",
    "configurations": [
        {
            "name": "Comfy Workflows API",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8787",
                "--reload"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "ADMIN_API_KEY": "your-secure-key",
                "CORS_ALLOW_ORIGIN": "*",
                "PORT": "8787",
                "DATA_FILE": "./data/workflows.json"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}